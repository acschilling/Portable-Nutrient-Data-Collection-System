<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    >
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*"
    >
    <TableRow
        android:layout_weight="1"
        android:gravity="center">
        <Button android:text="History" android:textSize="30dp" android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:onClick="goToHistory" android:scaleY=".75"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:gravity="center">
        <Button android:text="New Sample" android:textSize="30dp" android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:onClick="goToNewSample" android:scaleY=".75"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:gravity="center">
        <Button android:text="Tutorial" android:textSize="30dp" android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:onClick="goToTutorial" android:scaleY=".75"/>
    </TableRow>
</TableLayout>
</LinearLayout>

